---
const { title } = Astro.props;

import { Icon } from "astro-icon/components";

const  name="flagpack:co";


const flags = [
	{flag:'', name:'bandera 1'},
	{flag:'', name:'bandera 2'},
	{flag:'', name:'bandera 3'}
	];
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<header class="h-16 flex items-center">
			<div
				class="container flex flex-row items-center justify-between max-w-[1200px] mx-auto"
			>
				<img src="/duolingo-logo.svg" alt="#" />

				<a
					class="relative group flex flex-row items-center hover:text-[#c2bfbf] font-extrabold text-gray-400"
					href=""
				>
					<div class="flex">
						<div class="flex items-end">
							IDIOMA DE LA PAGINA

							<Icon name="mdi:chevron-down" />
						</div>

						<div class="absolute top-6 hidden group-hover:block -translate-x-[45%] ">
							<div
								class="-left-50% border-solid border-2 border-gray-400 rounded-2xl h-[580px] w-[350px] static"
							>
							{
								flags.map(flag=>(

								<div>
									<div>
									 {flag.flag}	
										<Icon name={name}/>
										
									</div>
									
									<div>
										{flag.name}
										</div>
									
								</div>
										))
							}


							</div>
						</div>
					</div>
				</a>
			</div>
		</header>
		<div class=" mt-36 flex justify-center mx-auto">
			<div class="max-w-lg">
						<img src="/duolingo-promo.svg">
			</div>
			<div class=" w-1/3 flex items-center justify-center flex-col">
				<h1 class="px-20 text-3xl text-center font-bold text-[#4b4b4b]">
					Â¡La forma divertida, efectiva y gratis de aprender un idioma!
				</h1>
				<div class="p-6 mt-10 hover:cursor-pointer hover:bg-[#7edd36] w-80 h-10 bg-[#58CC02] flex justify-center items-center text-white font-bold rounded-xl border-b-4 border-[#6ba142]">
					EMPIEZA AHORA
				</div>
				<div class="p-6 mt-3 hover:cursor-pointer hover:bg-[#f0f1ee] w-80 h-10 flex justify-center items-center text-[#1cb0f6] font-bold rounded-xl border-2 border-b-4 border-[#d8dad6]">
					YA TENGO UNA CUENTA
				</div>
			</div>
		</div>
		<Icon name="flagpack:co" size={64} />
		<slot />

		<footer class="container">Este es el pie de pagina</footer>
	</body>
</html>
